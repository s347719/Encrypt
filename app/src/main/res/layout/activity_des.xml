<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="com.shuhuan.encrypt.app.DesActivity">

    <TextView
            android:text="DES加密算法"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/des_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="待加密内容"
            />

    <EditText
            android:id="@+id/des_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码(8bytes)"
            />

    <EditText
            android:id="@+id/des_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="结果"
            />

    <EditText
            android:id="@+id/des_origenal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnDesEncrypt"
            android:text="点击开始加密"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnDesDecrypt"
            android:text="DES解密"
            />

</LinearLayout>
